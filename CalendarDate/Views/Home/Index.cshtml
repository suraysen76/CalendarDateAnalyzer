@model CalendarDate.Models.InputModel

<!DOCTYPE html>
<html>
<head>
    <title>Input </title>
    <style>
        Small {
            background: #cccccc;
        
        }
    </style>
</head>

<body>
    <form method="post">
        <fieldset>
            <legend>Analyze</legend>
            <table>


                <tr>
                    <td>Year:</td>
                    <td> @Html.TextBoxFor(model => model.Year, new { @type = "number", @Value = "2024" })</td>
                </tr>
                <tr>
                    <td>Hourly Pay:</td>
