                    </td>
                </tr>
                <tr>
                    <td>
                        May
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.MayHoliday, new { @type = "number", @Value = "0" })
                    </td>
                </tr>
                <tr>
                    <td>
                        June
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.JunHoliday, new { @type = "number", @Value = "0" })
                    </td>
                </tr>
                <tr>
                    <td>
                        July
                    </td>
                    <td>
