                        September
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.SepHoliday, new { @type = "number", @Value = "0" })
                    </td>
                </tr>
                <tr>
                    <td>
                        October
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.OctHoliday, new { @type = "number", @Value = "0" })
                    </td>
                </tr>
                <tr>
                    <td>
                        November
