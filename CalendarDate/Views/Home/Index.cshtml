                  </td>
                </tr>
                <tr>
                    <td>Working Hours Per Day:</td>
                    <td>
                        @Html.TextBoxFor(model => model.WorkingHoursPerDay, new { @type = "number", @Value = "8" })
                        <br />
                        <br />
                    </td>
                </tr>
                
                <tr>
                    <td>Holidays Per Day Month:</td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        January
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.JanHoliday, new { @type = "number", @Value = "0" })
                    </td>
                </tr>
                <tr>
                    <td>
                        February
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Holidays.FebHoliday, new { @type = "number", @Value = "0" })
